Import('env')
import os.path

SOURCES = [
  'version.cpp',
]

HEADERS = [
  'fhtagn-config.h', # XXX generated by configure
  'fhtagn.h',
  'version.h',
  'pointers.h',
  'property.h',
  'mandatory.h',
  'restricted.h',
  'restrictions.h',
  'byteorder.h',
]


if env.has_key('FHTAGN_BOOST_VERSION'):
  SOURCES += [
    'variant.cpp',
  ]

  HEADERS += [
    'variant.h',
    'stdvariant.h',
    os.path.join('detail', 'variant.tcc'),
  ]


env.addSources('fhtagn', SOURCES)
env.addHeaders('fhtagn', HEADERS)
