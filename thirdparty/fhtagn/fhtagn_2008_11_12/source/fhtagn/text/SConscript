Import('env')

SOURCES = [
  'transcoding.cpp',
  'decoders.cpp',
  'encoders.cpp',
]

HEADERS = [
  'transcoding.h',
  'decoders.h',
  'encoders.h',
]

if env.has_key('FHTAGN_BOOST_VERSION'):
  HEADERS += [
    'xparser.h',
  ]

env.addSources('fhtagn', SOURCES)
env.addHeaders('fhtagn', HEADERS)
