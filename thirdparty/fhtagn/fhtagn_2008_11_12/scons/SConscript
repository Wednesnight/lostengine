Import('env')

SOURCES = [
  '../source/fhtagn/version.cpp',
  '../source/fhtagn/text/transcoding.cpp',
  '../source/fhtagn/text/decoders.cpp',
  '../source/fhtagn/text/encoders.cpp',
  '../source/fhtagn/variant.cpp',
  '../source/fhtagn/threads/tasklet.cpp',
]

import os
env.appendPaths(os.getcwd(), include_dir = 'include')
env.appendPaths(os.getcwd(), include_dir = 'source')
env.LIB_OBJECTS.extend([StaticObject(s,
  CPPPATH = env.INCLUDES + ['../source'])
    for s in SOURCES])
