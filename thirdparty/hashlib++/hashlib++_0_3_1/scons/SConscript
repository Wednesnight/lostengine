Import('env')

SOURCES = [
  '../hl_md5.cpp',
  '../hl_md5wrapper.cpp',
  '../hl_sha1.cpp',
  '../hl_sha1wrapper.cpp',
  '../hl_sha256.cpp',
  '../hl_sha256wrapper.cpp',
  '../hl_sha2ext.cpp',
  '../hl_sha384wrapper.cpp',
  '../hl_sha512wrapper.cpp',
]

import os
env.appendPaths(os.getcwd(), include_dir = '.')
env.LIB_OBJECTS.extend([StaticObject(s,
  CPPPATH = env.INCLUDES + ['..'])
    for s in SOURCES])
