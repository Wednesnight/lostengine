// base.xcconfig
//
// !! You have to define LOSTENGINE_ROOT in user.xcconfig !!
// e.g. LOSTENGINE_ROOT = /Users/foo/path_to_lostengine_subversion_root

#include "user.xcconfig"

// Architectures
ARCHS = $(ARCHS_STANDARD_32_BIT)
ONLY_ACTIVE_ARCH = NO
VALID_ARCHS = i386 armv6

// Search Paths
ALWAYS_SEARCH_USER_PATHS = NO
HEADER_SEARCH_PATHS = "$(LOSTENGINE_ROOT)/thirdparty/boost/boost_1_36_0/include" "$(LOSTENGINE_ROOT)/thirdparty/freetype2/freetype_2_3_7/include" "$(LOSTENGINE_ROOT)/thirdparty/glee/glee_5_21/include" "$(LOSTENGINE_ROOT)/thirdparty/glfw/glfw_2_6/include" "$(LOSTENGINE_ROOT)/thirdparty/glfw/glfw_2_6/source" "$(LOSTENGINE_ROOT)/thirdparty/glfw/glfw_2_6/source/macosx" "$(LOSTENGINE_ROOT)/thirdparty/lua/lua_5_1_4/include" "$(LOSTENGINE_ROOT)/thirdparty/luabind/luabind_0_7_1/include" "$(LOSTENGINE_ROOT)/thirdparty/stb/stb_image_1_14" "$(LOSTENGINE_ROOT)/thirdparty/stb/stb_vorbis_0_99996" "$(LOSTENGINE_ROOT)/thirdparty/zlib/zlib_1_2_3/include" "$(LOSTENGINE_ROOT)/thirdparty/hashlib++/hashlib++_0_3_1"
LIBRARY_SEARCH_PATHS = $(inherited) "$(LOSTENGINE_ROOT)/thirdparty/freetype2/freetype_2_3_5/lib/mac" "$(LOSTENGINE_ROOT)/thirdparty/glfw/glfw_2_6/lib/mac" "$(LOSTENGINE_ROOT)/thirdparty/zlib/zlib_1_2_3/mac" "$(LOSTENGINE_ROOT)/thirdparty/boost/boost_1_34_1/lib/mac"
USER_HEADER_SEARCH_PATHS = "$(LOSTENGINE_ROOT)/projects/lostengine"

// Compiler Version
GCC_VERSION = 

// GCC 4.0 - Code Generation
GCC_OPTIMIZATION_LEVEL = 0

// GCC 4.0 - Language
GCC_C_LANGUAGE_STANDARD = c99

// GCC 4.0 - Preprocessing
//GCC_PREPROCESSOR_DEFINITIONS_NOT_USED_IN_PRECOMPS = FT_CONFIG_H="<freetype/config/ftconfig.h>" FT2_BUILD_LIBRARY
GCC_PREPROCESSOR_DEFINITIONS = FT_CONFIG_H="<freetype/config/ftconfig.h>" FT2_BUILD_LIBRARY __STDC_CONSTANT_MACROS

// GCC 4.0 - Warnings
GCC_WARN_ABOUT_RETURN_TYPE = YES
GCC_WARN_UNUSED_VARIABLE = YES

// enable precompiled headers
// specify the actual pch file in the debug/release configuration
GCC_PRECOMPILE_PREFIX_HEADER = YES
GCC_PFE_FILE_C_DIALECTS = c++
GCC_INCREASE_PRECOMPILED_HEADER_SHARING = YES;
