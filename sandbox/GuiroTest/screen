            bitmap = lost.bitmap.Bitmap(guiro:File("button.png")),
            cornerBounds =
            {
              left = 5,
              right = 5,
              top = 5,
              bottom = 5
            }
          }
        }
      },

      guiro:Button
      {
        bounds = lost.math.Rect(290, 95, 100, 25),
        fadeStates = true,
        label = guiro:Label
        {
