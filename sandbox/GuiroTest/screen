  id = "screen",
  bounds = lost.math.Rect(0, 0, 800, 600),

  guiro:UserInterface
  {
    id = "ui",
    bounds = lost.math.Rect(0, 0, 800, 600),

    guiro:Window
    {
      id = "window",
      bounds = lost.math.Rect(200, 150, 400, 300),
      header =
      {
        height = 25
      },
      label = guiro:Label
      {
        bounds = lost.math.Rect(5,282,390,25),
        text = "Funky window",
        font = defaultFont,
        fontSize = 12
      },

      guiro:Button
      {
        id = "button",
        bounds = lost.math.Rect(340, 10, 50, 25),
        fadeStates = true,
        label = guiro:Label
        {
          bounds = lost.math.Rect(12,7,50,25),
          text = "Test",
          font = defaultFont,
          fontSize = 12
        },
        images =
        {
          released = guiro:Image
          {
            bounds = lost.math.Rect(0, 0, 50, 25),
