require("Application")

function lost.application.Application:configure(event)
--  self.config.bitmapFilename = "kitten+tits.jpg"
  self.config.bitmapFilename = "stubs.jpg"
  self.config.fontSize = 22

end

function lost.application.Application:init(event)
	testlib = lost.font.freetype.Library.create()
	fontfile = globals.app.loader:load("Vera.ttf")
	testfont = lost.font.TrueTypeFont.create(testlib, fontfile)
  stuff = {}
	stuff.renderedText = testfont:render("Hello World!", 16)
end