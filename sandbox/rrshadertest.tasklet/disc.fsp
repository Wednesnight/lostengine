#import "quadrant.fsp"

float disc(vec2 lpc, vec2 c, float r)
{
  float dist = distance(lpc ,c);
  float circleColor = 1.0 - step(r, dist);
  float aawidth = 1.0;
  // set aa to 0 if you want to prevent antialiasing
  float aa = (step(r-aawidth, dist)*circleColor)*fract(dist); 
  circleColor = circleColor-aa;

  return circleColor; 
}

float quaddisc(vec2 lpc, vec2 c, float r, bvec2 sel)
{
  float d = disc(lpc, c, r);
  float q = quadrant(lpc, c, sel);
  return d*q;
}
